print('Хотите проверить, счастливый ли билет?')
def is_happy_ticket(number):
    number_int = int(number)
    if number_int % 2 == 0
        print('Четное число')
    else:
        print('Число не четное, введите другое число')
        
    half_happy_ticket = len(number) // 2
    a = number[:half_happy_ticket]
    b = number[half_happy_ticket:]
    
    first_half = (sum(int(x) for x in a))
    second_half = (sum(int(x) for x in b))
    
    if first_half == second_half:
        return ('Билет счастливый')
    else:
        return  ('Билет не счастливый')
    
print(is_happy_ticket(input('Введите номер билета ')))
