#Программа по определению счастливого билета
def is_happy_ticket(number):
    # Проверяем, что число четное
    if number % 2 != 0:
        return False

    # Разделяем число на две части
    half_length = len(str(number)) // 2
    first_half = str(number)[:half_length]
    second_half = str(number)[half_length:]

    # Суммируем цифры первой и второй половины числа
    sum_first_half = sum(int(digit) for digit in first_half)
    sum_second_half = sum(int(digit) for digit in second_half)

    # Проверяем, равны ли суммы
    if sum_first_half == sum_second_half:
        return True
    else:
        return False

# Пример использования
print(is_happy_ticket(1230))  # False
print(is_happy_ticket(1221))  # True
